<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wotvapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_yellow</item>
        <item name="colorPrimaryVariant">@color/light_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_brown</item>
        <item name="colorSecondaryVariant">@color/dark_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LightButton" parent="Widget.MaterialComponents.Button"/>

    <style name="LightButton.NoStroke">
        <item name="backgroundTint">@color/btn_outlined</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textColor">@color/txt_btn_outlined</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="NoCorners" parent="LightButton.NoStroke">
        <item name="cornerRadius">0dp</item>
    </style>
</resources>