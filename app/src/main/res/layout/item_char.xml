<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="character"
            type="castelles.com.github.api.model.Character" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_stroke"
            android:paddingHorizontal="@dimen/_8sdp">

            <ImageView
                android:id="@+id/imv_char_icon"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                tools:src="@drawable/ic_launcher"
                imageChar="@{character.image}"
                android:padding="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txv_character_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="@{character.name}"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imv_char_icon"
                app:layout_constraintTop_toTopOf="@id/imv_char_icon"
                tools:text="Carlinhos" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/txv_character_name"
                app:layout_constraintStart_toEndOf="@id/imv_char_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_6sdp">

                <ImageView
                    imageRarity="@{character.rarity}"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_weight="1"/>

                <ImageView
                    imageElement="@{character.element.image}"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_weight="1"/>

